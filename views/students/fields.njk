<fieldset class="item">
  <label>Avatar URL</label> 
  <input
    type="url" 
    name="avatar_url"
    placeholder="https://"
    value="{{ student.avatar_url }}"
  >
</fieldset>

<fieldset class="item">
  <label>Nome completo</label>
  <input
    type="text" 
    name="name"
    placeholder="Digite seu nome completo"
    value="{{ student.name }}"
  >
</fieldset>

<fieldset class="item">
  <label>Email</label>
  <input 
    type="email"
    name="email"
    value="{{ student.email }}"
    placeholder="email@email.com"
  >
</fieldset>

<fieldset class="item">
  <label>Data de Nascimento</label>
  <input
    type="date" 
    name="birth"
    value="{{ student.birth }}"
  >
</fieldset>

<fieldset class="item">
  <label>Ano escolar</label>
  <select name="schollar-year">
    <option 
      value="fifth-mid-grade"
    >
      5° ano do fundamental
    </option>
    
    <option 
      value="sixth-mid-grade"
    >
      6° ano do fundamental
    </option>
    
    <option 
      value="seventh-mid-grade"
    >
      7° ano do fundamental
    </option>
    
    <option 
      value="eighth-mid-grade"
    >
      8° ano do fundamental
    </option>
    
    <option 
      value="nineth-mid-grade"
    >
      9° ano do fundamental
    </option>
    
    <option 
      value="first-high-grade"
    >
      1° ano do colegial
    </option>
    
    <option 
      value="second-high-grade"
    >
      2° ano do colegial
    </option>
    <option 
      value="third-high-grade"
    >
      3° ano do colegial
    </option>
  </select>
</fieldset>

<fieldset class="item">
  <label>Carga horária semanal</label>
  <input
    type="number" 
    name="weekly-hours"
    value="{{ student.birth }}"
    placeholder="Digite a carga horária semanal"
  >
</fieldset>