{% extends 'layout.njk' %}

{% block content %}

  <div class="card table-container">
    <table width="100%">
      <thead>
        <tr>
          <th>Professor</th>
          <th>Acompanhamento</th>
          <th>Ação</th>
        </tr>
      </thead>
      <tbody>
        {% for student in students %}        
          <tr>
            <td>
              <span style="background-image: url({{ student.avatar_url }})"></span>
              {{ student.name }}
            </td>
            <td>
              {% for field in student.fields %}
                <span>{{ field }}</span>
              {% endfor %}
            </td>
            <td>
              <a href="/students/{{ student.Id }}">Ver Professor</a>
            </td>
          </tr>
        {% endfor %}
      </tbody>
    </table>
  </div>

{% endblock content %}