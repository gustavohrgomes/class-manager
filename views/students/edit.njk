{% extends 'layout.njk' %}

{% block content %}

  <div class="card">
    <section 
      class="avatar"
      style="background: url({{ student.avatar_url }}) no-repeat center center; background-size: cover"
    >
    </section>

    <section class="details">
      <form action="/students?_method=PUT" method="POST">
        
        <h1>Editar Aluno</h1>

        {% include "students/fields.njk" %}

        <div class="button__flex-container">
          <button type="submit">Salvar</button>
        </div>
        
        <input type="hidden" name="id" value="{{ student.id }}">
      </form>

    </section>
  </div>

{% endblock content %}